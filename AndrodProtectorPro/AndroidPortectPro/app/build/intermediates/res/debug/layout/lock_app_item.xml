<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="140dip"
	android:gravity="center_horizontal"
>

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="300dip"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="10dp"
        card_view:cardPreventCornerOverlap="true"
        card_view:cardUseCompatPadding="true"
        android:layout_marginTop="15dip"
        card_view:cardBackgroundColor="#90EE90"
        >
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            >


        <ImageView
            android:id="@+id/lock_app_icon"
            android:layout_width="60dip"
            android:layout_height="60dip"
            android:layout_alignParentLeft="true"
            android:scaleType="fitXY"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/ic_launcher"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dip"
            android:layout_toRightOf="@id/lock_app_icon"
            android:orientation="vertical"
            android:layout_marginTop="10dip"
            >

            <TextView
                android:id="@+id/lock_app_tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="@string/lock_app_item_tv_name_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/lock_app_item_text_size"
                />

            <TextView
                android:id="@+id/lock_app_tv_packname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="5dip"
                android:text="@string/lock_app_item_tv_package_text"
                android:textColor="@android:color/black"
                android:textSize="@dimen/lock_app_item_text_package_size"
                />

        </LinearLayout>


        <ImageView
            android:id="@+id/lock_app_iv"
            android:layout_width="@dimen/lock_app_item_iv_size"
            android:layout_height="@dimen/lock_app_item_iv_size"
            android:layout_alignParentRight="true"
            android:scaleType="fitXY"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/unlock"
            />

        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
